{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Garry's Mod Lua addons schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "authors": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "description": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "githubRepo": {
      "type": "string",
      "format": "uri"
    },
    "side": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["client", "server"]
      },
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "required": ["name", "authors", "version", "side"],
  "additionalProperties": false
}
